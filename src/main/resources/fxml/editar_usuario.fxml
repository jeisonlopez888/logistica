<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.logistica.ui.EditarUsuarioController"
      alignment="CENTER" spacing="8" style="-fx-padding: 16;" prefWidth="420" prefHeight="360">

    <Label text="Editar Usuario" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="idField" promptText="Cédula" />
    <TextField fx:id="nombreField" promptText="Nombre completo" />
    <TextField fx:id="emailField" promptText="Correo electrónico" />
    <TextField fx:id="telefonoField" promptText="Teléfono" />
    <PasswordField fx:id="passwordField" promptText="Contraseña" />
    <CheckBox fx:id="adminCheck" text="Es administrador" />

    <HBox spacing="10" alignment="CENTER">
        <Button text="Guardar" onAction="#handleGuardar"/>
        <Button text="Cancelar" onAction="#handleCancelar"/>
    </HBox>

    <Label fx:id="mensajeLabel" textFill="red" />

</VBox>


