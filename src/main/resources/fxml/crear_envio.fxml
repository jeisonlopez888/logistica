<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.logistica.ui.CrearEnvioController"
            prefWidth="400" prefHeight="300">

    <children>
        <VBox spacing="10" alignment="CENTER"
              layoutX="50" layoutY="30"
              prefWidth="300" prefHeight="240">

            <Label text="Crear Envío" style="-fx-font-size: 18px;"/>

            <TextField fx:id="origenField" promptText="Dirección de Origen"/>
            <TextField fx:id="destinoField" promptText="Dirección de Destino"/>
            <TextField fx:id="pesoField" promptText="Peso en kg"/>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="crearBtn" text="Crear" onAction="#handleCrear"/>
                <Button fx:id="cancelarBtn" text="Cancelar" onAction="#handleCancelar"/>
            </HBox>

            <Label fx:id="mensajeLabel" textFill="red"/>
        </VBox>
    </children>
</AnchorPane>
