<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.logistica.ui.CrearUsuarioController"
      alignment="CENTER" spacing="10" prefWidth="400" prefHeight="400">

    <Label text="Registrar Usuario" style="-fx-font-size: 18px;"/>
    <TextField fx:id="idField" promptText="Número de identificación"/>
    <TextField fx:id="nombreField" promptText="Nombre completo"/>
    <TextField fx:id="emailField" promptText="Correo electrónico"/>
    <TextField fx:id="telefonoField" promptText="Teléfono"/>
    <PasswordField fx:id="passwordField" promptText="Contraseña"/>
    <CheckBox fx:id="adminCheck" text="Administrador"/>
    <Button text="Registrar" onAction="#handleRegistrar"/>
    <Label fx:id="mensajeLabel"/>
</VBox>



